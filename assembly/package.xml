<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>p2</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
	    <directory>${project.build.directory}/diirt</directory>
	    <outputDirectory>/diirt</outputDirectory>
    </fileSet>
    <fileSet>
	    <directory>${project.build.directory}/maven-osgi-bundles</directory>
	    <outputDirectory>/maven-osgi-bundles</outputDirectory>
    </fileSet>
    <fileSet>
	    <directory>${project.build.directory}/thirdparty</directory>
	    <outputDirectory>/thirdparty</outputDirectory>
    </fileSet>
    <fileSet>
	    <directory>${project.build.directory}/core</directory>
	    <outputDirectory>/core</outputDirectory>
    </fileSet>
    <fileSet>
	    <directory>${project.build.directory}/applications</directory>
	    <outputDirectory>/applications</outputDirectory>
    </fileSet>
    <fileSet>
	    <directory>${project.build.directory}/product</directory>
	    <outputDirectory>/product</outputDirectory>
    </fileSet>
    <fileSet>
	    <directory>${project.basedir}/p2repo</directory>
	    <outputDirectory>/p2repo</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
